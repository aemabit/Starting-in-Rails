<div class="field-comments">
  <div class="nick">
    <p>
      <strong>Nickname: <%= comment.commenter %> </strong>
    </p>
  </div>
  
  <div class="user-comment">
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
    
    <p>
      <%= link_to 'Delete Comment', [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
  
</div>
