<div class="container">
  <div class="box-container">
    <div class="article">
    <h3>
      <strong>Title:</strong>
      <%= @article.title %>
    </h3>

    <p>
      <strong>Text:</strong>
      <%= @article.text %>
    </p>
    </div>

    <div class="comments">
      <h3>Comments</h3>
      <%= render @article.comments %>

      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
      <div class="pages">
        <%= link_to 'Edit', edit_article_path(@article) %> |
        <%= link_to 'Back', articles_path %>
      </div>
    </div>
  </div>
</div>
